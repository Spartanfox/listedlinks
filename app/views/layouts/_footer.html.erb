<header class="navbar navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left" style="font-size:300%;">
        <% if user_signed_in? %>
          <% if current_user.page %>
            <li>
            <% if link_page_visible? && @page == current_user.page %>
              <%= link_to "Edit Page", edit_page_path(current_user.page) %>
            <% else %>
              <%= link_to "My Page", page_path(current_user.page) %>
            <% end %>
            </li>
          <% else %>
            <li class="<%= current_page?(new_page_path)? "active" : "" %>">
              <%= link_to "New Page", new_page_path %>
            </li>
          <% end %>
        <% end %>
        <li class="<%= current_page?(pages_path)? "active" : "" %>">
          <%= link_to "Pages", pages_path %>
        </li>
        <li><%= link_to 'Games', "https://play.google.com/store/apps/details?id=com.spartanfox.blocktoidz&hl=en"%></li>
      </ul>
    </nav>
  </div>
</header>
