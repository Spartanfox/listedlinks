
<%= simple_form_for [@page, @link], url: page_links_path  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :slug, collection: 0..10, selected: @link.slug, label: 'Priority (Links are sorted by largest numbers first)' %>
    <%= f.input :name, label: 'Link name' %>
    <%= f.input :link, label: 'Link URL' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-lg btn-primary"  %>
  </div>
<% end %>
